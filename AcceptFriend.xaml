<Window x:Class="iGeographic.AcceptFriend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iGeographic"
        mc:Ignorable="d"
        Title="AcceptFriend" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="120" Width="300">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Usuario</TextBlock>
        <ComboBox Name="usuario" Grid.Row="0" Grid.Column="2"/>
        <Button Grid.Row="2" Grid.ColumnSpan="3" HorizontalAlignment="Center" Click="Button_Click">Añadir Amigo</Button>
    </Grid>
</Window>
